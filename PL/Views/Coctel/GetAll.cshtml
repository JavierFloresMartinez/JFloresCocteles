@model ML.Coctel
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Cocteles</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Ingrese el coctel que desea buscar</h5>
            <hr />
        </div>
    </div>

</div>

<div class="col-md-12">
    @using (Html.BeginForm("GetAll", "Coctel", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
      
        <div class="row">

            <div class="col-md-3">

                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-circle-user"></i>
                    </span>
                    @Html.TextBoxFor(model => model.strDrink, new { @class = "form-control", @id = "txtNombre",@placeholder = "Nombre"})

                </div>
            </div>

            <div class="col-md-3">

                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-circle-user"></i></span>
                    @Html.TextBoxFor(model => model.Ingrediente, new { @class = "form-control", @id = "txtApellidoPaterno", @placeholder = "Ingrediente" })
                </div>
            </div>

         
        </div>
        <br />
        <div class="container">

            <div class="col">
                <input type="submit" value="Buscar" class="btn btn-info" />

            </div>
        </div>
    }
</div>
<br />

<div class="row">
  
    @foreach (ML.Coctel coctel in Model.Cocteles)
    {
        <div class="col-md-3 mt-3 pt-3">
            <div class="card text-white bg-dark border-success mb-3 bor" style="width: 19rem; height: 50rem;">
                <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.strDrinkThumb" style="width:250px ; height:250px" /></p>
                <h5 class="card-title" style="text-align: center; vertical-align: middle;">@coctel.strDrink </h5>
                @if (coctel.strIngredient1 != null)
                {
                    @if (coctel.strIngredient2 != null)
                    {
                        <p class="card-text" style="text-align: center; vertical-align: middle;">Ingredientes</p>
                        <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strIngredient1 | @coctel.strIngredient2 </p>
                        <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.URL@coctel.strIngredient1@coctel.extension" style="width:50px ; height:50px" /> <img id="Img" src="@coctel.URL@coctel.strIngredient2@coctel.extension" style="width:50px ; height:50px" /></p>
                    }
                }
                
         
                @if (coctel.strIngredient3 != null)
                {
                    @if (coctel.strIngredient4 != null)
                    {
                        <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strIngredient3 | @coctel.strIngredient4</p>
                        <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.URL@coctel.strIngredient3@coctel.extension" style="width:50px ; height:50px" /><img id="Img" src="@coctel.URL@coctel.strIngredient4@coctel.extension" style="width:50px ; height:50px" /></p>
                    }
                    else
                    {
                        <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strIngredient3 </p>
                        <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.URL@coctel.strIngredient3@coctel.extension" style="width:50px ; height:50px" /></p>

                    }
                }
               
                @if (coctel.strIngredient5 != null)
                {
                    @if(coctel.strIngredient6 !=null)
                    {
                            <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strIngredient5 | @coctel.strIngredient6</p>
                            <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.URL@coctel.strIngredient5@coctel.extension" style="width:50px ; height:50px" /><img id="Img" src="@coctel.URL@coctel.strIngredient6@coctel.extension" style="width:25px ; height:25px" /></p>
                     }
                        else
                        {


                            <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strIngredient5 </p>
                            <p class="card-text" style="text-align: center; vertical-align: middle;"><img id="Img" src="@coctel.URL@coctel.strIngredient5@coctel.extension" style="width:50px ; height:50px" /></p>
                        }
                }
                @if(coctel.strInstructionsES != null){
                    <p class="card-text" style="text-align: center; vertical-align: middle;">Instrucciones</p>
                    <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strInstructionsES</p>
                }
                else{
                    <p class="card-text" style="text-align: center; vertical-align: middle;">Instrucciones</p>
                    <p class="card-text" style="text-align: center; vertical-align: middle;">@coctel.strInstructions</p>
                }
               
              
            </div>
        </div>

    }

</div>
